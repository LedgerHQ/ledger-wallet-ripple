{
  "manifest_version": 2,
  "name": "__MSG_application_name__",
  "description": "__MSG_application_small_description__",
  "version": "1.1.0",
  "default_locale": "en",
  "minimum_chrome_version": "50",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "optional_permissions": [
    "videoCapture",
    "fileSystem",
    {
      "fileSystem": ["write"]
    }
  ],
  "permissions": [
    "*://ledgerwallet.com/*",
    "*://*.ledgerwallet.com/*",
    "*://*.chain.com/v2/notifications/*",
    "*://api.coinkite.com/*",
    "*://coinkite.com/*",
    "*://node.ledger.fr/*",
    "*://api.chronocoin.fr/*",
    "storage",
    "unlimitedStorage",
    "notifications",
    "usb",
    "hid",
    {
      "usbDevices": [
        {
          "vendorId": 11415,
          "productId": 0
        },
        {
          "vendorId": 11415,
          "productId": 1
        }
      ]
    }
  ],
  "icons": {
    "16": "images/app_icon/ic_app_16.png",
    "32": "images/app_icon/ic_app_32.png",
    "48": "images/app_icon/ic_app_48.png",
    "64": "images/app_icon/ic_app_64.png",
    "128": "images/app_icon/ic_app_128.png"
  },
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://*.ledgerwallet.com/*",
      "*://ledgerwallet.com/*",
      "http://dev.ledgerwallet.com:3000/api"
    ]
  }
}